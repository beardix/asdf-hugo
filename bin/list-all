#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

: "${GITHUB_API_TOKEN:=""}"

readonly RELEASES_URL="https://api.github.com/repos/gohugoio/hugo/releases"

#
# https://github.com/rbenv/ruby-build/blob/ac92ec0507fad718e7abcf13540641937ecfef3f/bin/ruby-build#L1201
sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z.\1/; s/$/.z/; G; s/\n/ /' | \
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

list_versions() {
  cmd="curl -fsS --url $RELEASES_URL"
  [ -n "$GITHUB_API_TOKEN" ] && cmd+=" -H 'Authorization: token $GITHUB_API_TOKEN'"
  versions="$(eval $cmd | grep -oE "tag_name\": *\"v.*\"," | sed 's/tag_name\": *\"v//;s/\",//;')"
  extended_versions="$(echo "$versions" | awk '{print "extended-"$1}')"
  echo "$versions"
  echo "$extended_versions"
}

#
echo "$(list_versions | sort_versions | tr '\n' ' ')"
